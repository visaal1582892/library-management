<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>



<AnchorPane prefHeight="550.0" prefWidth="760.0" style="-fx-background-color: linear-gradient(to bottom, #e3f2fd, #ffffff);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library_management.controllers.AddMemberController">

   <!-- Heading -->
   <Text layoutX="237.0" layoutY="62.0" style="-fx-fill: #2090bc;" text="REGISTRATION FORM" textAlignment="CENTER" underline="true">
      <font>
         <Font name="System Bold Italic" size="30.0" />
      </font>
   </Text>

   <!-- Message -->
   <Text fx:id="message" layoutX="213.0" layoutY="109.0" style="-fx-fill: #d32f2f;" textAlignment="CENTER" wrappingWidth="372.0">
      <font>
         <Font size="18.0" />
      </font>
   </Text>

   <!-- Labels and Input Fields -->
   <Text layoutX="155.0" layoutY="180.0" text="Name:">
      <font><Font name="System Italic" size="22.0" /></font>
   </Text>
   <TextField fx:id="name" layoutX="320.0" layoutY="156.0" prefWidth="300.0" promptText="Enter Your Name" style="-fx-background-radius: 10; -fx-font-size: 14px;" />

   <Text layoutX="155.0" layoutY="240.0" text="Email Id:">
      <font><Font name="System Italic" size="22.0" /></font>
   </Text>
   <TextField fx:id="email" layoutX="320.0" layoutY="216.0" prefWidth="300.0" promptText="Enter Your Email Id" style="-fx-background-radius: 10; -fx-font-size: 14px;" />

   <Text layoutX="155.0" layoutY="300.0" text="Mobile No.:">
      <font><Font name="System Italic" size="22.0" /></font>
   </Text>
   <TextField fx:id="mobile" layoutX="320.0" layoutY="276.0" prefWidth="300.0" promptText="Enter Your Mobile Number" style="-fx-background-radius: 10; -fx-font-size: 14px;" />

   <Text layoutX="155.0" layoutY="360.0" text="Gender:">
      <font><Font name="System Italic" size="22.0" /></font>
   </Text>
   <ComboBox fx:id="genderComboBox" layoutX="320.0" layoutY="336.0" prefWidth="300.0" promptText="Select Gender" style="-fx-background-radius: 10; -fx-font-size: 14px;" />

   <Text layoutX="155.0" layoutY="420.0" text="Address:">
      <font><Font name="System Italic" size="22.0" /></font>
   </Text>
   <TextField fx:id="address" layoutX="320.0" layoutY="396.0" prefWidth="300.0" promptText="Enter Your Address" style="-fx-background-radius: 10; -fx-font-size: 14px;" />

   <!-- Register Button -->
   <Button fx:id="register" layoutX="320.0" layoutY="470.0" style="-fx-background-color: lightblue; -fx-background-radius: 10px; -fx-font-size: 16px;" text="Register">
      <effect>
         <DropShadow color="gray" offsetX="2" offsetY="2" radius="3" />
      </effect>
   </Button>

   <!-- Back Button -->
   <Button layoutX="20.0" layoutY="20.0" onAction="#backButton" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: #bbdefb; -fx-text-fill: #0d47a1; -fx-font-weight: bold; -fx-background-radius: 8;" text="← Back" />

   <!-- Home Button -->
   <Button layoutX="650.0" layoutY="20.0" onAction="#homeButton" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: #c8e6c9; -fx-text-fill: #1b5e20; -fx-font-weight: bold; -fx-background-radius: 8;" text="Home 🏠" />

</AnchorPane>
