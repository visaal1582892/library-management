<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane focusTraversable="true" prefHeight="550.0" prefWidth="760.0"
            style="-fx-background-color: linear-gradient(to bottom, #e3f2fd, #ffffff);"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.library_management.HomeController">
   <children>

      <!-- Styled Heading -->
      <Text fill="#2090bc" layoutX="114.0" layoutY="74.0" strokeType="OUTSIDE" strokeWidth="0.0"
            text="LIBRARY MANAGEMENT SYSTEM" textAlignment="CENTER" underline="true">
         <font>
            <Font name="System Bold Italic" size="33.0" />
         </font>
      </Text>

      <!-- Buttons -->
      <Button fx:id="book" layoutX="212.0" layoutY="139.0" mnemonicParsing="false"
              onAction="#bookManagement" prefHeight="52.0" prefWidth="290.0"
              style="-fx-background-color: lightblue; -fx-background-radius: 10px; -fx-font-size: 25px; -fx-font-family: 'System Italic';">
         <effect>
            <DropShadow color="gray" offsetX="2" offsetY="2" radius="3" />
         </effect>
         <font>
            <Font size="25.0" />
         </font>
         <text>Book Management</text>
      </Button>

      <Button fx:id="memberManagement" layoutX="212.0" layoutY="223.0" mnemonicParsing="false"
              onAction="#memberManagement" prefHeight="52.0" prefWidth="290.0"
              style="-fx-background-color: lightblue; -fx-background-radius: 10px; -fx-font-size: 25px; -fx-font-family: 'System Italic';">
         <effect>
            <DropShadow color="gray" offsetX="2" offsetY="2" radius="3" />
         </effect>
         <font>
            <Font size="25.0" />
         </font>
         <text>Member Management</text>
      </Button>

      <Button fx:id="issueBook" layoutX="212.0" layoutY="310.0" mnemonicParsing="false"
              onAction="#issueAndReturnBooks" prefHeight="52.0" prefWidth="290.0"
              style="-fx-background-color: lightblue; -fx-background-radius: 10px; -fx-font-size: 25px; -fx-font-family: 'System Italic';">
         <effect>
            <DropShadow color="gray" offsetX="2" offsetY="2" radius="3" />
         </effect>
         <font>
            <Font size="25.0" />
         </font>
         <text>Issue &amp; Return Books</text>
      </Button>
      
       <Button fx:id="reports" layoutX="212.0" layoutY="397.0" mnemonicParsing="false"  prefHeight="52.0" prefWidth="290.0"
              style="-fx-background-color: lightblue; -fx-background-radius: 10px; -fx-font-size: 25px; -fx-font-family: 'System Italic';">
         <effect>
            <DropShadow color="gray" offsetX="2" offsetY="2" radius="3" />
         </effect>
         <font>
            <Font size="25.0" />
         </font>
         <text>Reports</text>
      </Button>

      <!-- Unused FlowPane -->
      <FlowPane prefHeight="200.0" prefWidth="200.0" />

   </children>

   <opaqueInsets>
      <Insets />
   </opaqueInsets>

</AnchorPane>
