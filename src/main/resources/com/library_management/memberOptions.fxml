<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="550.0" prefWidth="760.0"
            style="-fx-background-color: linear-gradient(to bottom, #e3f2fd, #ffffff);"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.library_management.controllers.member.MemberOptionsController">
   <children>

      <!-- Styled Title -->
      <Text layoutX="160.0" layoutY="90.0" style="-fx-fill: #2090bc;" text="MEMBER MANAGEMENT OPTIONS" textAlignment="CENTER" underline="true">
         <font>
            <Font name="System Bold Italic" size="33.0" />
         </font>
      </Text>

      <!-- Back Button -->
      <Button layoutX="20.0" layoutY="20.0" onAction="#backButton" prefHeight="30.0" prefWidth="80.0"
              style="-fx-background-color: #bbdefb; -fx-text-fill: #0d47a1; -fx-font-weight: bold; -fx-background-radius: 8;" text="← Back" />

      <!-- Styled Buttons -->
      <Button fx:id="register" layoutX="210.0" layoutY="150.0" onAction="#onRegister" prefHeight="52.0" prefWidth="310.0"
              style="-fx-background-color: lightblue; -fx-background-radius: 10px; -fx-font-size: 25px; -fx-font-family: 'System Italic';" text="Register Member">
         <effect>
            <DropShadow color="gray" offsetX="2" offsetY="2" radius="3" />
         </effect>
      </Button>

      <Button fx:id="updateMember" layoutX="210.0" layoutY="230.0" onAction="#updateMember" prefHeight="52.0" prefWidth="310.0"
              style="-fx-background-color: lightblue; -fx-background-radius: 10px; -fx-font-size: 25px; -fx-font-family: 'System Italic';" text="Update Member">
         <effect>
            <DropShadow color="gray" offsetX="2" offsetY="2" radius="3" />
         </effect>
      </Button>

      <Button fx:id="viewAllMembers" layoutX="210.0" layoutY="310.0" onAction="#viewAllMembers" prefHeight="52.0" prefWidth="310.0"
              style="-fx-background-color: lightblue; -fx-background-radius: 10px; -fx-font-size: 25px; -fx-font-family: 'System Italic';" text="View All Members">
         <effect>
            <DropShadow color="gray" offsetX="2" offsetY="2" radius="3" />
         </effect>
      </Button>

   </children>
</AnchorPane>
