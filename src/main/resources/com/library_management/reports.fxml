<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="reports" focusTraversable="true" prefHeight="550.0" prefWidth="760.0" style="-fx-background-color: linear-gradient(to bottom, #e3f2fd, #ffffff);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library_management.controllers.report.ReportsController">
   <children>

        <Button layoutX="20.0" layoutY="20.0"
                onAction="#backButton" prefHeight="30.0" prefWidth="80.0"
                style="-fx-background-color: #bbdefb; -fx-text-fill: #0d47a1; -fx-font-weight: bold; -fx-background-radius: 8;"
                text="← Back"/>
     
      <!-- Button: List Of Overdue Books -->
      <Button fx:id="overDueBooks" layoutX="212.0" layoutY="130.0" mnemonicParsing="false" onAction="#overDueBooks" prefHeight="52.0" prefWidth="335.0" style="-fx-background-color: lightblue; -fx-background-radius: 10px; -fx-font-size: 20px; -fx-font-family: 'System Italic';" text="List Of Overdue Books">
         <effect>
            <DropShadow color="gray" offsetX="2" offsetY="2" radius="3" />
         </effect>
         <font>
            <Font size="20.0" />
         </font>
      </Button>

      <!-- Button: Count of books Per Category -->
      <Button fx:id="booksPerCategory" layoutX="212.0" layoutY="220.0" mnemonicParsing="false" onAction="#booksPerCategory" prefHeight="52.0" prefWidth="335.0" style="-fx-background-color: lightblue; -fx-background-radius: 10px; -fx-font-size: 20px; -fx-font-family: 'System Italic';" text="Count of Books Per Category">
         <effect>
            <DropShadow color="gray" offsetX="2" offsetY="2" radius="3" />
         </effect>
         <font>
            <Font size="20.0" />
         </font>
      </Button>

      <!-- Button: List Of Members With Active Issued Books -->
      <Button fx:id="activeIssuedBooks" layoutX="212.0" layoutY="310.0" mnemonicParsing="false" onAction="#activeIssuedBooks" prefHeight="52.0" prefWidth="335.0" style="-fx-background-color: lightblue; -fx-background-radius: 10px; -fx-font-size: 20px; -fx-font-family: 'System Italic';" text="Members With Active Issued Books">
         <effect>
            <DropShadow color="gray" offsetX="2" offsetY="2" radius="3" />
         </effect>
         <font>
            <Font size="20.0" />
         </font>
      </Button>

   </children>

   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</AnchorPane>
