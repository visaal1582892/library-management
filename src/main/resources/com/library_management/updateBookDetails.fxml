<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="550.0" prefWidth="760.0" 
            style="-fx-background-color: linear-gradient(to bottom, #e3f2fd, #ffffff);" 
            xmlns="http://javafx.com/javafx/24.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.library_management.controllers.UpdateBookDetailsController">

    <!-- Heading -->
    <Label layoutX="189.0" layoutY="35.0" prefHeight="46.0" prefWidth="403.0" 
           style="-fx-text-fill: #2090bc;" text="UPDATE BOOK DETAILS" underline="true">
        <font><Font name="System Bold Italic" size="31.0" /></font>
    </Label>

    <!-- Message -->
    <Text fx:id="message" layoutX="190.0" layoutY="123.0" 
          textAlignment="CENTER" 
          wrappingWidth="414.6667">
        <font><Font size="22.0" /></font>
    </Text>

    <!-- Search Box -->
    <TextField fx:id="searchField" layoutX="242.0" layoutY="154.0" 
               prefWidth="249.0" promptText="Search by Title or Author" 
               style="-fx-background-radius: 10; -fx-font-size: 14px;" />
    <ListView fx:id="suggestionsList" layoutX="242.0" layoutY="186.0" 
              prefWidth="249.0" maxHeight="100" 
              style="-fx-background-radius: 10; -fx-font-size: 14px;" 
              visible="false" />

    <!-- Labels -->
    <Label layoutX="190.0" layoutY="233.0" text="Title">
        <font><Font name="System Italic" size="24.0" /></font>
    </Label>
    <Label layoutX="190.0" layoutY="281.0" text="Author">
        <font><Font name="System Italic" size="24.0" /></font>
    </Label>
    <Label layoutX="190.0" layoutY="335.0" text="Category">
        <font><Font name="System Italic" size="24.0" /></font>
    </Label>

    <!-- Input Fields -->
    <TextField fx:id="titleField" layoutX="340.0" layoutY="236.0" 
               prefWidth="209.0" promptText="Enter Title" 
               style="-fx-background-radius: 10; -fx-font-size: 14px;" />
    <TextField fx:id="authorField" layoutX="340.0" layoutY="284.0" 
               prefWidth="209.0" promptText="Enter Author Name" 
               style="-fx-background-radius: 10; -fx-font-size: 14px;" />
    <ComboBox fx:id="categoryComboBox" layoutX="340.0" layoutY="335.0" 
              prefWidth="209.0" promptText="Select Category" 
              style="-fx-background-radius: 10; -fx-font-size: 14px;" />

    <!-- Update Button -->
    <Button layoutX="300.0" layoutY="403.0" onAction="#handleButtonClick" 
            prefHeight="34.0" prefWidth="79.0" 
            style="-fx-background-color: lightblue; -fx-background-radius: 10px; -fx-font-size: 16px;" 
            text="Update">
        <effect>
            <DropShadow color="gray" offsetX="2" offsetY="2" radius="3" />
        </effect>
    </Button>

    <!-- Back Button -->
    <Button layoutX="22.0" layoutY="20.0" onAction="#backButton" 
            prefHeight="30.0" prefWidth="80.0" 
            style="-fx-background-color: #bbdefb; -fx-text-fill: #0d47a1; -fx-font-weight: bold; -fx-background-radius: 8;" 
            text="← Back" />

    <!-- Home Button -->
    <Button layoutX="650.0" layoutY="20.0" onAction="#homeButton" 
            prefHeight="30.0" prefWidth="80.0" 
            style="-fx-background-color: #c8e6c9; -fx-text-fill: #1b5e20; -fx-font-weight: bold; -fx-background-radius: 8;" 
            text="Home 🏠" />

</AnchorPane>
