<AnchorPane prefHeight="550.0" prefWidth="760.0" style="-fx-background-color: linear-gradient(to bottom, #e3f2fd, #ffffff);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library_management.controllers.book.BookOptionsController">

   <children>
      <!-- Styled Title -->
      <Text layoutX="135.0" layoutY="101.0" style="-fx-fill: #2090bc;" text="BOOK MANAGEMENT OPTIONS" textAlignment="CENTER" underline="true">
         <font>
            <Font name="System Bold Italic" size="33.0" />
         </font>
      </Text>

      <!-- VBox for Buttons -->
      <VBox alignment="CENTER" layoutX="150.0" layoutY="100.0" spacing="20.0" />

       <!-- Back Button -->
      <Button layoutX="20.0" layoutY="20.0" onAction="#backButton" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: #bbdefb; -fx-text-fill: #0d47a1; -fx-font-weight: bold; -fx-background-radius: 8;" text="â† Back" />


      <Button fx:id="viewAllBooksButton" layoutX="210.0" layoutY="302.0" onAction="#switchToViewAllBooks" prefHeight="52.0" prefWidth="310.0" style="-fx-background-color: lightblue; -fx-background-radius: 10px; -fx-font-size: 25px; -fx-font-family: 'System Italic';" text="View All Books">
         <effect>
            <DropShadow color="gray" offsetX="2" offsetY="2" radius="3" />
         </effect>
         <font>
            <Font size="26.0" />
         </font>
      </Button>

      <Button fx:id="updateBookDetailsButton" layoutX="210.0" layoutY="223.0" onAction="#switchToUpdateBookDetails" prefHeight="52.0" prefWidth="311.0" style="-fx-background-color: lightblue; -fx-background-radius: 10px; -fx-font-size: 25px; -fx-font-family: 'System Italic';" text="Update Book Details">
         <effect>
            <DropShadow color="gray" offsetX="2" offsetY="2" radius="3" />
         </effect>
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </Button>
      <Button fx:id="addBookButton" layoutX="210.0" layoutY="145.0" onAction="#switchToAddBook" prefHeight="52.0" prefWidth="313.0" style="-fx-background-color: lightblue; -fx-background-radius: 10px; -fx-font-size: 25px; -fx-font-family: 'System Italic';" text="Add Book">
         <effect>
            <DropShadow color="gray" offsetX="2" offsetY="2" radius="3" />
         </effect>
         <font>
            <Font size="19.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
