<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="760.0" style="-fx-background-color: linear-gradient(to bottom, #e3f2fd, #ffffff);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library_management.controllers.issue_and_return_books.IssueReturnMainController">
    <children>

        <!-- Back Button -->
        <Button layoutX="22.0" layoutY="20.0" onAction="#backButton" prefHeight="30.0" prefWidth="80.0" 
            style="-fx-background-color: #bbdefb; -fx-text-fill: #0d47a1; -fx-font-weight: bold; -fx-background-radius: 8;" 
            text="← Back" />

        <!-- Heading Label styled -->
        <Label layoutX="250.0" layoutY="50.0" text="Issue / Return Book" style="-fx-text-fill: #2090bc;" underline="true" textAlignment="CENTER">
            <font>
                <Font name="System Bold Italic" size="32.0" />
            </font>
        </Label>

        <!-- Issue Book Button styled -->
        <Button fx:id="issueBookButton" layoutX="299.0" layoutY="150.0" mnemonicParsing="false" onAction="#switchToIssueBook" prefHeight="47.0" prefWidth="162.0" text="Issue Book"
            style="-fx-background-color: lightblue; -fx-background-radius: 10px; -fx-font-size: 16px;">
            <effect>
                <DropShadow color="gray" offsetX="2" offsetY="2" radius="3" />
            </effect>
            <font>
                <Font size="17.0" />
            </font>
        </Button>

        <!-- Return Book Button styled -->
        <Button fx:id="returnBookButton" layoutX="299.0" layoutY="210.0" mnemonicParsing="false" onAction="#switchToReturnBook" prefHeight="41.0" prefWidth="162.0" text="Return Book"
            style="-fx-background-color: lightblue; -fx-background-radius: 10px; -fx-font-size: 16px;">
            <effect>
                <DropShadow color="gray" offsetX="2" offsetY="2" radius="3" />
            </effect>
            <font>
                <Font size="17.0" />
            </font>
        </Button>

        <!-- View All Issues Button styled -->
        <Button fx:id="viewAllIssuesButton" layoutX="299.0" layoutY="265.0" mnemonicParsing="false" onAction="#switchToViewAllIssues" prefHeight="47.0" prefWidth="162.0" text="View All Issues"
            style="-fx-background-color: lightblue; -fx-background-radius: 10px; -fx-font-size: 16px;">
            <effect>
                <DropShadow color="gray" offsetX="2" offsetY="2" radius="3" />
            </effect>
            <font>
                <Font size="17.0" />
            </font>
        </Button>

    </children>
</AnchorPane>
